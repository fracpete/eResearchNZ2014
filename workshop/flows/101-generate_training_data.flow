adams.flow.control.Flow
	-actor
		adams.flow.standalone.CallableActors
			-actor
				adams.flow.sink.Display
					-name
					progress
					-short-title
					true
					-writer
						adams.data.io.output.NullWriter
	-actor
		adams.flow.source.SelectDirectory
			-stop-if-canceled
			true
			-dir-chooser-title
			Select parent dir with images
			-initial-dir
			${HOME}/documents/conferences/eResearchNZ2014/workshop/data/101_ObjectCategories-2classes
	-actor
		adams.flow.transformer.SetVariable
			-var-name
			dir
	-actor
		adams.flow.control.Tee
			-name
			create output filename
			-tee
				adams.flow.transformer.AppendName
					-suffix
					train.arff
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					outfile
	-actor
		adams.flow.control.Trigger
			-name
			list categories
			-tee
				adams.flow.source.FileSystemSearch
					-search
						adams.flow.source.filesystemsearch.DirectorySearch
							-directory
							@{dir}
							-sorting
							SORT_BY_NAME
			-tee
				adams.flow.transformer.SetVariable
					-var-name
					sub_dir
			-tee
				adams.flow.control.Tee
					-name
					determine category
					-tee
						adams.flow.transformer.BaseName
					-tee
						adams.flow.transformer.SetVariable
							-var-name
							category
					-tee
						adams.flow.sink.CallableSink
							-callable
							progress
			-tee
				adams.flow.control.Trigger
					-name
					traverse images
					-tee
						adams.flow.source.FileSystemSearch
							-search
								adams.flow.source.filesystemsearch.FileSearch
									-directory
									@{sub_dir}
									-regexp
									.*\\.jpg
									-sorting
									SORT_BY_NAME
					-tee
						adams.flow.transformer.JAIReader
					-tee
						adams.flow.transformer.JAIFlattener
							-flattener
								adams.data.jai.flattener.Histogram
					-tee
						adams.flow.transformer.WekaFilter
							-filter
								weka.filters.unsupervised.attribute.Add
									-T
									STR
									-N
									category
									-C
									last
					-tee
						adams.flow.transformer.WekaSetInstanceValue
							-value
							@{category}
					-tee
						adams.flow.transformer.WekaInstanceDumper
							-prefix
							@{outfile}
	-flow-execution-listener
		adams.flow.execution.NullListener

